<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/atp__activity_player_layout_help_call_audience_background"
        android:orientation="vertical"
        android:padding="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_doctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/drawable_doctor"
                android:gravity="center"
                android:text="Bác sĩ"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/drawable_giaovien"
                android:gravity="center"
                android:text=" Giáo viên"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_engineer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/drawable_engineer"
                android:gravity="center"
                android:text="Kĩ sư"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reporter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/drawable_reporter"
                android:gravity="center"
                android:text="Phóng viên"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </TableRow>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/atp__activity_player_layout_help_call_title_background"
        android:gravity="center"
        android:text="Ý kiến chuyên gia"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</RelativeLayout>