<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/center"
    android:background="#6f9a9a9a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_below="@id/top">

    <com.tientt.trieuphumobile.version2.customviews.DonutProgress
        android:id="@+id/donut_progress"
        app:donut_max="30"
        app:donut_progress="30"
        app:donut_text_color="@android:color/white"
        app:donut_suffix_text=""
        app:donut_finished_color="@android:color/white"
        app:donut_unfinished_color="#1C000000"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />


    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/avatar"
        android:text="Khách"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/avatar"
        android:text="Thí sinh"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/atp__activity_profile_icon_money"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>

