<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atp__activity_home_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.MenuActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_logo_bg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/atp__bg_circle_anim" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/atp__icon_logo_in_app" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:gravity="center">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_no_image" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:text="Khách"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/avatar"
            android:text="Thí sinh"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/iv_money"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_type"
            android:layout_toRightOf="@id/avatar"
            android:src="@drawable/atp__activity_profile_icon_money" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:layout_toRightOf="@id/iv_money"
            android:src="@drawable/atp__activity_profile_icon_money"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/ic_achiecement"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_type"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_money"
            android:src="@drawable/atp__activity_profile_icon_achievement" />

        <TextView
            android:id="@+id/tv_achiecement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:layout_toRightOf="@id/ic_achiecement"
            android:src="@drawable/atp__activity_profile_icon_achievement"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="16dp" />


    </RelativeLayout>


    <Button
        android:background="@drawable/bg_button_press"
        android:textColor="@color/white"
        android:text="Bỏ qua"
        android:id="@+id/bt_skip"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center"
        android:gravity="center" />


    <ImageView
        android:id="@+id/img_load"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/atp__icon_progress_indeterminate" />


</RelativeLayout>
